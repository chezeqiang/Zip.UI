<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ex="clr-namespace:Zip.UI.Extensions">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Zip.UI;component/Themes/Basic/Base.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Zip.UI;component/Themes/Basic/Brushs.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Zip.UI;component/Themes/Templates/TextBoxTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TextBoxDefaultStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Foreground" Value="{StaticResource TextBox.Text.Brush}" />
        <Setter Property="CaretBrush" Value="{StaticResource TextBox.Text.Brush}" />
        <Setter Property="ex:Background.Brush" Value="{StaticResource TextBox.Background.Brush}" />
        <Setter Property="ex:Background.FocusBrush" Value="{StaticResource TextBox.Background.Focused.Brush}" />
        <Setter Property="ex:Border.Brush" Value="{StaticResource TextBox.Border.Brush}" />
        <Setter Property="ex:Border.FocusBrush" Value="{StaticResource TextBox.Border.Focused.Brush}" />
        <Setter Property="ex:Border.Thickness" Value="1" />
        <Setter Property="ex:Border.FocusThickness" Value="2" />
        <Setter Property="ex:Border.CornerRadius" Value="3" />
        <Setter Property="ex:Icon.Width" Value="15" />
        <Setter Property="ex:Icon.Height" Value="15" />
        <Setter Property="ex:Icon.Brush" Value="{StaticResource TextBox.Icon.Brush}" />
        <Setter Property="ex:Icon.Margin" Value="10,0,0,0" />
        <Setter Property="ex:Watermark.Brush" Value="{StaticResource TextBox.Watermark.Brush}" />
        <Setter Property="ex:Watermark.HorizontalAlignment" Value="Left" />
        <Setter Property="ex:Watermark.VerticalAlignment" Value="Center" />
        <Setter Property="ex:Watermark.Margin" Value="10,0,0,0" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="7,0" />
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource TextBoxErrorTemplate}" />
        <Setter Property="Template" Value="{StaticResource TextBoxDefaultTemplate}" />
    </Style>

</ResourceDictionary>